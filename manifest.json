{
    "name": "Color Picker",
    "description": "A color picker extension. With this extension, you can pick any color from anywhere in your window, from inside and also outside of your browser.",
    "version": "0.0.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "./JS/background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "./HTML/options.html",
    "action": {
        "default_popup": "./HTML/popup.html",
        "default_icon": "./Images/logo_128.png"
    },
    "icons": {
        "32": "./Images/logo_32.png",
        "48": "./Images/logo_48.png",
        "128": "./Images/logo_128.png"
    }
}